<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"
        app:cardElevation="15dp"
        android:id="@+id/btnnextcard"
        android:layout_margin="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:src="@drawable/mypost"
                android:id="@+id/bookedimage"
                android:scaleType="fitXY"
                android:layout_marginEnd="5dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Five Star"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:id="@+id/bookedname"
                    android:layout_marginStart="5dp"
                    android:textColor="@color/black"
                    />
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="60dp"
                    android:src="@drawable/rating"
                    />
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Address"
                   android:layout_marginStart="1dp"
                   android:layout_marginTop="10dp"
                   android:drawableLeft="@drawable/ic_baseline_not_listed_location_24"
                   android:id="@+id/bookedaddress"
                   />
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="99"
                       android:textStyle="bold"
                       android:id="@+id/bookedrate"
                       android:gravity="center"
                       android:layout_marginTop="10dp"
                       android:textColor="#26CF20"
                       android:drawableLeft="@drawable/dollar"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="03057725136"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:drawableLeft="@drawable/ic_baseline_phone_24"
                    android:drawablePadding="5dp"
                    android:id="@+id/bookedphone"
                    />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>