<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:scaleType="fitXY"
        android:layout_marginTop="30dp"
        android:src="@drawable/hotel2"
        app:layout_constraintEnd_toEndOf="@+id/imageviewrvid"
        app:layout_constraintStart_toStartOf="@+id/imageviewrvid"
        app:layout_constraintTop_toBottomOf="@+id/imageviewrvid" />

    <TextView
        android:id="@+id/tvhotelnameid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="50dp"
        android:text="Hotelname"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageviewrvid"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginTop="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/hotel"
        app:layout_constraintEnd_toEndOf="@+id/tvhotelnameid"
        app:layout_constraintStart_toStartOf="@+id/tvhotelnameid"
        app:layout_constraintTop_toBottomOf="@+id/tvhotelnameid"/>
</androidx.constraintlayout.widget.ConstraintLayout>